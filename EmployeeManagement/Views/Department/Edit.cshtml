@model Department

@{
    ViewData["Title"] = "Update";
}

<h1>Update department</h1>

<form asp-controller="Department" asp-action="Edit" method="POST">
    <input type="hidden" asp-for="Id">
   <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Add Department Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Code"></label>
        <input type="text" class="form-control" asp-for="Code" placeholder="Add Code">
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description" placeholder="Add Description"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input type="date" class="form-control" asp-for="StartDate" placeholder="Start Date" />
    </div>

    <button type="submit" class="btn btn-warning">Update Department</button>
</form>